<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/Singup_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_ddukbaegi_icon"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:textSize="15sp"
            android:id="@+id/Singup_email"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            />
        <TextView
            android:text="\@kookmin.ac.kr"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <EditText
        android:textSize="15sp"
        android:id="@+id/Singup_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="특수문자를 적어도 하나이상 사용해주세요"
        android:inputType="textPassword"
        />

    <EditText
        android:textSize="15sp"
        android:id="@+id/Singup_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/Singup_password"
        android:hint="닉네임"
        android:inputType="text"
        android:maxLines="1" />
    <Button
        android:id="@+id/fragment_signupActivity_input_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Singup_name"
        android:layout_alignParentRight="true"
        android:text="회원가입 인증메일 발송"
        />
</LinearLayout>