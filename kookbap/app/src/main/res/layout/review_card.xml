<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/reviewCardView"
        android:layout_width="match_parent"
        android:layout_height="500dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reviewFoodImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal|top"
                app:srcCompat="@drawable/ic_review" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/reviewRatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5"
                    android:rating="2.5"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar"
                    />
                <TextView
                    android:text="좋아요 수 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/reviewLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="0"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviewReviewerID"
                android:text="작성자 이름"/>
            <TextView
                android:id="@+id/reviewTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="태그 표시"/>
            <TextView
                android:id="@+id/reviewContextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="리뷰 내용"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>